<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Title Bar -->
	<SolidColorBrush x:Key="TitleBarColor" Color="#FF4D8CE1" />
	<SolidColorBrush x:Key="TitleBarButtonHoverColor" Color="LightGray" />
	<SolidColorBrush x:Key="TitleBarButtonPressedColor" Color="#FF88838A" />
    <SolidColorBrush x:Key="TitleBarFontColor" Color="LightGray" />


	<!-- Main Window -->
	<SolidColorBrush x:Key="MainWindowBorderColor" Color="#FF386DB0" />
	<SolidColorBrush x:Key="MainWindowBackgroundColor" Color="#FFCECECE" />


	<!-- Controls -->
	<SolidColorBrush x:Key="ControlBackgroundColor" Color="#FFBBBBBB" />
	<SolidColorBrush x:Key="ControlBorderColor" Color="Transparent" />
	<SolidColorBrush x:Key="ControlNormalColor" Color="#FFA8A8A8" />
	<SolidColorBrush x:Key="ControlHoverColor" Color="#FF7EA9E4" />
	<SolidColorBrush x:Key="ControlPressedColor" Color="#FFE3E3E3" />
	<SolidColorBrush x:Key="ControlDisabledColor" Color="#FF747474" />
	<SolidColorBrush x:Key="ControlFontColor" Color="#FF434343" />


	<Color x:Key="ProgressBarColor1">#FFA2A2A2</Color>
	<Color x:Key="ProgressBarColor2">#FF8F8F8F</Color>
	<Color x:Key="CheckMarkColor">#FF434343</Color>


	<!-- Font -->
	<Style TargetType="Window">
		<Setter Property="FontFamily" Value="Arial" />
		<Setter Property="SnapsToDevicePixels" Value="True" />
	</Style>
	
</ResourceDictionary>