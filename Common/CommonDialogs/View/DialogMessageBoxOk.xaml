<UserControl x:Class="CommonDialogs.View.DialogMessageBoxOk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonDialogs.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300" IsVisibleChanged="UserControl_IsVisibleChanged"  >
    
	<Grid MinWidth="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        

        <TextBlock VerticalAlignment="Center" Margin="15" Name="TextBlockMessage"></TextBlock>
        <Button Grid.Row="1" HorizontalAlignment="Right" Width="80" Height="25" Margin="5" Click="Button_Click">OK</Button>
    </Grid>
</UserControl>
